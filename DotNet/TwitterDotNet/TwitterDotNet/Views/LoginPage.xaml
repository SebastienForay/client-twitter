<Page
    x:Class="TwitterDotNet.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwitterDotNet.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TwitterDotNet.ViewModels" mc:Ignorable="d">

    <Page.DataContext>
        <vm:LoginPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="125" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="20, 0, 20, 20" VerticalAlignment="Center" Visibility="{Binding PinCodeTextBoxVisibility, Mode=TwoWay}" Header="Code PIN :" Height="62" MaxLength="8" Text="{Binding PinCode, Mode=TwoWay}" />
        <Button Grid.Row="0" Margin="0, 0, 20, 5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="{Binding ValidateButtonVisibility, Mode=TwoWay}" Content="Valider" Command="{Binding ValidatePinCodeCommand, Mode=TwoWay}" />
        <WebView Grid.Row="1" Height="Auto" Width="Auto" Source="{Binding WebViewUriSource, Mode=TwoWay}" />
    </Grid>
</Page>
