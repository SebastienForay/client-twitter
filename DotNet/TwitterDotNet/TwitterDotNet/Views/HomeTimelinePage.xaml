        <!--     TODO : Améliorer le visuel, adapter la taille des items de la liste au tweet         -->



        <ScrollViewer Grid.Row="1">
            <ListView Name="TweetsListView" ItemsSource="{Binding TweetsCollection}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Horizontal" Margin="0"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding CreatedBy.ProfileImageUrl}" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <StackPanel Margin="10, 0, 0, 0" Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CreatedBy.Name}" FontWeight="Bold" FontSize="16" />
                                        <TextBlock Margin="5, 2, 0, 0" Text="@" FontSize="13" />
                                        <TextBlock Margin="0, 2, 0, 0" Text="{Binding CreatedBy.UserIdentifier.ScreenName}" FontSize="13" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Text}" TextWrapping="WrapWholeWords" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" Margin="50, 0, 0, 0">
                                <Button Padding="-2, -3, 0, 0" Width="75" Height="25">
                                    <Image Source="ms-appx:///Assets/icons/appbar.undo.point.png" Width="25" Height="25"></Image>
                                </Button>
                                <Button Padding="-2, -3, 0, 0" Width="75" Height="25" Margin="10, 0, 10, 0" Command="{Binding ElementName=TweetsListView, Path=DataContext.RetweetCommand}" CommandParameter="{Binding IdStr}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="ms-appx:///Assets/icons/appbar.social.twitter.retweet.png" Width="25" Height="25"></Image>
                                        <TextBlock Text="{Binding RetweetCount}" />
                                    </StackPanel>
                                </Button>
                                <Button Padding="-2, -3, 0, 0" Width="75" Height="25">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="ms-appx:///Assets/icons/appbar.heart.png" Width="25" Height="25"></Image>
                                        <TextBlock Text="{Binding FavoriteCount}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Height="40" Content="Tweeter" Command="{x:Bind ViewModel.GotoTweetingPageCommand}"/>
            <Button Height="40" Content="Tweet with Media" Margin="20, 0, 0, 0" />
        </StackPanel>
    </Grid>
</Page>
